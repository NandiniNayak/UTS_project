<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

    <% @posts.each do |post| %>
<p><%=current_user.email%> has posted on instagram on <%=post.created_at.strftime("%b %d, %Y")%></p>
        <p><%= post.description %></p>
        <p><%= image_tag(post.image,class:"myimage") %></p>
        <p><%= post.user %></p>
        <p><%= link_to 'Show', post %></p>
        <p><%= link_to 'Edit', edit_post_path(post) %></p>
        <p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>

    <% end %>


<br>

<%= link_to 'New Post', new_post_path %>
